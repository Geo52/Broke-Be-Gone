<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>broke be gone</title>
  <script src="https://cdn.plaid.com/link/v2/stable/link-initialize.js"></script>
</head>

<body>
  <h1>hello</h1>
  <form action="/logout" method="POST">
    <button type="submit">Sign Out</button>
  </form>

  <button id="link-account">Link Bank Account</button>
  <div id="balance"></div>
  <script>
    async function createLinkToken() {
      const res = await fetch('/api/create_link_token')
      const data = await res.json()
      return data.link_token
    }

    async function initPlaid() {
      const linkToken = await createLinkToken()

      plaidHandler = Plaid.create({
        token: linkToken,
        onSuccess: async (public_token, metadata) => {
          await fetch('/api/exchange_public_token', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({
              public_token
            })
          })
        },
      })

      plaidHandler.open()
    }

    async function getBalance() {
      const res = await fetch('/api/balance')
      const data = await res.json()
      const balanceDiv = document.getElementById('balance')
      balanceDiv.innerHTML = '' // Clear previous content

      for (let i = 0; i < data.length; i++) {
        // Create and append bank name
        const bankName = document.createElement('h2')
        bankName.textContent = data[i].item.institution_name
        balanceDiv.appendChild(bankName)

        const ul = document.createElement('ul')

        for (let j = 0; j < data[i].accounts.length; j++) {
          // Create and append account info
          const li = document.createElement('li')
          li.textContent = `${data[i].accounts[j].name}: $${data[i].accounts[j].balances.current}`
          ul.appendChild(li)
        }

        balanceDiv.appendChild(ul)
      }

      //   for (let i = 0; i < data.length; i++) {
      //     console.log(data[i].item.institution_name);
      //     for (let j = 0; j < data[i].accounts.length; j++) {
      //       console.log(data[i].accounts[j].name);
      //       console.log(data[i].accounts[j].balances.current);
      //     }
      //   }
    }

    document.getElementById('link-account').addEventListener('click', () => {
      initPlaid()
    })

    getBalance()
  </script>
</body>

</html>